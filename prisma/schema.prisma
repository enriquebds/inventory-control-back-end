// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manager {
  id String @id
  name String
  email String
  password String
  isManager Boolean @default(true)
  products Product[]
}

model Product {
  id String @id
  name String
  category String
  description String
  price Float
  manager Manager? @relation(fields: [managerId], references: [id])
  managerId String?
  cart Cart[]
}

model Cart {
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId String
  products Product @relation(fields: [productId], references: [id])
  productId String

  @@id([clientId, productId])
}

model Client {
  id String @id
  name String
  email String
  password String
  cart Cart[]
}